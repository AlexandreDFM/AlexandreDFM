# This is an example file. DO NOT commit the actual secrets.yaml to version control!
# Copy this file to secrets.yaml and fill in your actual values.
# Then create the secret using: kubectl apply -f kubernetes/secrets.yaml

apiVersion: v1
kind: Secret
metadata:
    name: alexandredfm-secret-env-prod
    namespace: alexandredfm-prod
    labels:
        app: alexandredfm
type: Opaque
stringData:
    FRONT_BASE_URL: "your-front-base-url"
    NEXT_PUBLIC_API_BASE_URL: "your-api-base-url"
    NEXT_PUBLIC_DIRECTUS_URL: "your-directus-url"
    DIRECTUS_WEBSITE_TOKEN: "your-directus-website-token"

